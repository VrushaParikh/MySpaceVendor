<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/included_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <include
        android:id="@+id/included_toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imageView"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="100dp"
            android:text="Welcome XYZ Vendor!"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView"
        android:layout_marginTop="30dp"
        android:background="#F3F1F1">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"

            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp"
            android:background="#19EFEFEF"
            app:cardElevation="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#E8F4DB"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp"
                        app:strokeColor="@color/cardview_dark_background"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:id="@+id/block1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:padding="0dp">


                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="150dp"
                                android:layout_height="70dp"
                                app:srcCompat="@drawable/shinfo" />

                            <TextView
                                android:id="@+id/shop_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="Shop Information"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        app:cardBackgroundColor="#E8F4DB"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:strokeColor="@color/cardview_dark_background"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:id="@+id/block2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:padding="0dp">


                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="150dp"
                                android:layout_height="73dp"

                                app:srcCompat="@drawable/offer" />

                            <TextView
                                android:id="@+id/add_offer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="Add Offers"

                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal">


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"

                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#E8F4DB"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:strokeColor="@color/cardview_dark_background"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:id="@+id/block3"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="0dp">


                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="150dp"
                                android:layout_height="73dp"
                                android:layout_marginTop="7dp"
                                app:srcCompat="@drawable/token" />

                            <TextView
                                android:id="@+id/view_token"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="View Token"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#E8F4DB"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:strokeColor="@color/cardview_dark_background"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:id="@+id/block4"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:padding="0dp">


                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="150dp"
                                android:layout_height="73dp"
                                app:srcCompat="@drawable/scant" />

                            <TextView
                                android:id="@+id/scan_token"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="Scan Token"

                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#E8F4DB"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:strokeColor="@color/cardview_dark_background"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:id="@+id/block5"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:padding="0dp">


                            <ImageView
                                android:id="@+id/img5"
                                android:layout_width="150dp"
                                android:layout_height="73dp"
                                app:srcCompat="@drawable/payment" />

                            <TextView
                                android:id="@+id/make_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"

                                android:gravity="center"
                                android:text="Make Payment"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#E8F4DB"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:strokeColor="@color/cardview_dark_background"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:id="@+id/block6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="vertical"
                            android:padding="0dp">


                            <ImageView
                                android:id="@+id/img6"
                                android:layout_width="150dp"
                                android:layout_height="73dp"
                                app:srcCompat="@drawable/managet" />

                            <TextView
                                android:id="@+id/mng_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="Manage Timeslots"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp"

                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
